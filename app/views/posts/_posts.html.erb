<ul class="list-unstyled">
    <% posts.each do |post| %>
        <li class="media mb-3">
            <img class="mr-2 rounded" src="<%= gravatar_url(post.user, { size: 50 }) %>" alt="">
            <div class="media-body border-bottom">
                <div class="row">
                    <div class="col-md-12">
                        <%= link_to post.user.name, user_path(post.user) %> <span class="text-muted">投稿日時<%= post.created_at %></span><span class="p-1 ml-3 bg-info text-white rounded-pill"><%= render 'posts/emotion_label', post: post %></span>
                    </div>
                </div>
                <div class="row">
                    <p class="col-md-8 text-break"><%= post.content %></p>
                    <div class="col-md-2">
                        <%= render 'favorites/favorite_button', post: post %>
                    </div>
                    <div class="col-md-2">
                        <% if current_user == post.user %>
                            <%= link_to "削除する", post, method: :delete, data: { confirm: "投稿を削除してもよろしいですか？" }, class: 'btn btn-danger btn-sm' %>
                        <% end %>
                    </div>
                </div>
            </div>
        </li>
    <% end %>
</ul>